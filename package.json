{
  "name": "lib-tools",
  "version": "3.0.0-dev.0",
  "description": "The lib-tools helps you simplify the build, bundle and npm packaging workflows for Typescript, JavaScript, SCSS, CSS and assets module library projects.",
  "author": "DagonMetric",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dagonmetric/lib-tools.git"
  },
  "bugs": {
    "url": "https://github.com/dagonmetric/lib-tools/issues"
  },
  "homepage": "https://github.com/dagonmetric/lib-tools",
  "keywords": [
    "lib-tools",
    "library-tools",
    "npm-packaging-tools",
    "library-packaging-tools",
    "typescript-library-packaging",
    "javascript-library-packaging",
    "style-module",
    "assets-module",
    "typescript",
    "sass",
    "scss",
    "postcss",
    "autoprefixer",
    "webpack",
    "rollup"
  ],
  "bin": {
    "lib": "./bin/lib.mjs"
  },
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    }
  },
  "module": "./dist/cli/index.js",
  "main": "./dist/cli/index.js",
  "types": "./dist/cli/index.d.ts",
  "scripts": {
    "lint": "eslint .",
    "compile": "tsc --project tsconfig.build.json",
    "generate-json-schema": "node ./tools/generate-json-schema.mjs",
    "copy-files": "node ./tools/copy-files.mjs",
    "build": "npm run compile && npm run generate-json-schema && npm run copy-files",
    "test": "glob -c \"node --no-warnings --loader ts-node/esm --test\" \"tests/**/*test.ts\"",
    "lib:help": "node --no-warnings --enable-source-maps ./dist/bin/lib.mjs --help",
    "lib:version": "node --no-warnings --enable-source-maps ./dist/bin/lib.mjs --version",
    "lib:lint": "node --no-warnings --enable-source-maps ./dist/bin/lib.mjs lint --logLevel=info",
    "lib:test": "node --no-warnings --enable-source-maps ./dist/bin/lib.mjs test",
    "lib:build": "node --no-warnings --enable-source-maps ./dist/bin/lib.mjs build"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-typescript": "^11.1.4",
    "ajv": "^8.12.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "esbuild": "^0.19.4",
    "glob": "^10.3.10",
    "less-loader": "^11.1.3",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.1.4",
    "resolve-url-loader": "^5.0.0",
    "rollup": "^3.29.4",
    "sass": "^1.68.0",
    "sass-loader": "^13.3.2",
    "ts-loader": "^9.4.4",
    "tslib": "^2.6.2",
    "typescript": "5.2.2",
    "webpack": "^5.88.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.2",
    "@types/yargs": "^17.0.26",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "ts-json-schema-generator": "^1.3.0",
    "ts-node": "^10.9.1"
  }
}
