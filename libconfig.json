{
  "$schema": "./dist/schemas/schema.json",
  "projects": {
    "lib-tools": {
      "root": ".",
      "tasks": {
        "build": {
          "outDir": "dist",
          "copy": ["README.md", "LICENSE"]
        },
        "test": {
          "handler": "exec: glob -c \"node --no-warnings --loader ts-node/esm --test\" \"tests/**/*test.ts\""
        },
        "lint": {
          "handler": "exec: eslint ."
        }
      }
    }
  }
}
